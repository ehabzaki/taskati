<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postHeader"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin" android:background="#ffcf40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/taskcell"
            android:textColor="#000000"
            android:text="open face book"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/completed"
            android:layout_toEndOf="@+id/completed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/taskidcell"
            android:textSize="12sp"
            android:textColor="#ffcf41"
            android:layout_below="@+id/taskcell"
            android:layout_alignBottom="@+id/taskcell"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/completed"
            android:src="@drawable/completed"
            android:onClick="completedtask"
            android:shadowColor="#000000"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/timecell"
            android:textSize="12sp"
            android:textColor="#00007F"
            android:paddingLeft="18dp"
            android:layout_below="@+id/taskcell"
            android:layout_alignLeft="@+id/taskcell"
            android:layout_alignStart="@+id/taskcell" />

    </RelativeLayout>

</RelativeLayout>