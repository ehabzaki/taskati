<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ehab.Reminder">

    <application
        android:allowBackup="true"
        android:label="Reminder"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ehab.Reminder.DisplayList"
            android:label="Task List" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ehab.Reminder.UpdateRecord"
            android:label="Edit Task" >
        </activity>
        <activity
            android:name="com.example.ehab.Reminder.AddNewRecord"
            android:label="new Task" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>
